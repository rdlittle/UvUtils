<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="527.0" prefWidth="619.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.webfront.uvtool.controller.ProgramController">
   <children>
      <TextField fx:id="txtAppName" layoutX="14.0" layoutY="14.0" prefHeight="26.0" prefWidth="568.0" promptText="Application name" />
      <TextField fx:id="txtPackage" layoutX="14.0" layoutY="61.0" prefHeight="26.0" prefWidth="568.0" promptText="Package" />
      <VBox layoutX="14.0" layoutY="100.0" prefHeight="415.0" prefWidth="568.0" spacing="10.0">
         <children>
            <HBox prefHeight="20.0" prefWidth="568.0" spacing="230.0">
               <children>
                  <Label text="Read Files" />
                  <Label text="Write Files" />
               </children>
            </HBox>
            <HBox prefHeight="196.0" prefWidth="568.0" spacing="10.0">
               <children>
                  <TextArea fx:id="txtReadFiles" prefHeight="253.0" prefWidth="287.0" />
                  <TextArea fx:id="txtWriteFiles" prefHeight="253.0" prefWidth="282.0" />
               </children>
            </HBox>
            <HBox prefHeight="167.0" prefWidth="568.0">
               <children>
                  <TableView fx:id="tblInputs" editable="true" prefHeight="157.0" prefWidth="570.0">
                    <columns>
                      <TableColumn fx:id="tblColInputNumber" prefWidth="75.0" resizable="false" sortable="false" text="Input #" />
                      <TableColumn fx:id="tblColPrompt" prefWidth="492.0" resizable="false" sortable="false" text="Prompt" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
            </HBox>
            <CheckBox fx:id="chkIsSubroutine" mnemonicParsing="false" text="This is a subroutine" />
            <HBox alignment="BOTTOM_RIGHT" prefHeight="35.0" prefWidth="568.0" spacing="10.0">
               <children>
                  <Button fx:id="btnDelete" mnemonicParsing="false" prefHeight="26.0" prefWidth="70.0" text="Delete" />
                  <Button fx:id="btnCancel" mnemonicParsing="false" prefHeight="26.0" prefWidth="70.0" text="Cancel" />
                  <Button fx:id="btnSave" mnemonicParsing="false" onAction="#onBtnSave" prefHeight="26.0" prefWidth="70.0" text="Save" />
               </children>
            </HBox>
         </children>
      </VBox>
      <Button fx:id="btnAddRow" layoutX="582.0" layoutY="343.0" mnemonicParsing="false" onAction="#onAddRow" text="+" />
      <Button fx:id="btnDeleteRow" layoutX="582.0" layoutY="369.0" mnemonicParsing="false" onAction="#onDeleteRow" prefHeight="26.0" prefWidth="29.0" text="-" />
      <CheckBox fx:id="chkIsNew" layoutX="585.0" layoutY="402.0" mnemonicParsing="false" selected="true" visible="false" />
   </children>
</AnchorPane>
